<?php

if (! isset($posts) || ! is_array($posts)) {
    echo 'Post data missing!';
    return;
}

if (empty($posts)) {
    echo 'Empty results!';
    return;
}

echo $view->renderWidget([
    'widget' => \Frontend\Widget\ListingArticles::class,
    'method' => 'renderWidget',
    'params' => [
        'posts' => $posts
    ],
]);